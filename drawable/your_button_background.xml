<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bo tròn góc -->
    <corners android:radius="12dp"/>

    <!-- Đặt màu nền cho nút -->
    <solid android:color="#FF5733"/>

    <!-- Đặt đường viền cho nút -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/>

    <!-- Nội dung padding -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />
</shape>
